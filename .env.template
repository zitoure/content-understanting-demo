# Azure AI Content Understanding Demo Configuration
# Copy this file to .env and fill in your actual values

# Azure AI Foundry Resource Configuration
AZURE_AI_SERVICE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_AI_SERVICE_API_KEY=your-api-key-here
AZURE_AI_SERVICE_API_VERSION=2025-05-01-preview

# Authentication (choose one method)
# Method 1: Use API Key (set AZURE_AI_SERVICE_API_KEY above)
# Method 2: Use Azure AD authentication (recommended for production)
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret

# Optional: Azure OpenAI for enhanced processing
# AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-openai-key
# AZURE_OPENAI_API_VERSION=2024-08-01-preview
# AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4o
# AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-small

# Optional: Azure Search for RAG scenarios
# AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
# AZURE_SEARCH_API_KEY=your-search-key
# AZURE_SEARCH_INDEX_NAME=content-understanding-index

# Demo Configuration
DEFAULT_OUTPUT_DIR=./output
SAMPLE_DATA_DIR=./sample_data
LOG_LEVEL=INFO
MAX_CONCURRENT_REQUESTS=5
DEFAULT_TIMEOUT_SECONDS=300

# File Processing Limits
MAX_FILE_SIZE_MB=200
MAX_AUDIO_DURATION_HOURS=4
MAX_VIDEO_DURATION_HOURS=4
